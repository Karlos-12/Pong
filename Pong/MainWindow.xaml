<Window x:Class="Pong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" Background="#FF1A1A1A" Foreground="White" KeyDown="Window_KeyDown" SizeToContent="Manual">
    <Grid>
        <Canvas x:Name="Field_main" Margin="0,0,0,100"/>
        <Grid Margin="0,500,0,0">
            <Button x:Name="start" Content="Button" HorizontalAlignment="Left" Height="74" Margin="356,10,0,0" VerticalAlignment="Top" Width="190" Click="start_Click"/>
        </Grid>
        <Label x:Name="control" Content="Label" HorizontalAlignment="Left" Height="84" Margin="28,500,0,0" VerticalAlignment="Top" Width="258" Background="{x:Null}" Foreground="White" FontSize="50"/>

    </Grid>
</Window>
